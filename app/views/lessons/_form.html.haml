%p#notice= notice
= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :prompt, "Prompt"
    = f.text_field :prompt

  %p= "Ex: (They're/Their) having a nice time."

  .field
    = f.label :body, "Answer"
    = f.text_field :body

  %p= "Ex: {+They're} having a nice time."

  .field
    = f.label :rule_id, :value => "Rule"
    = select_tag "rule_id", options_from_collection_for_select(@rules, "id", "title", :selected => @rule)

  .actions
    = f.submit 'Save'
